<%- include('../partials/header.ejs') %>

<div class="container">
    <h3 class="center-align indigo-text text-darken-4" id="show2Title">Beer Details</h3>
    <div class="row">
      <div class="col s12 m6 offset-m3">
        <div class="card">
          <div class="card-content">
            <span class="card-title flow-text indigo-text text-darken-4" id="show2CardTitle"><%= beer.name %></span>
            <p class="flow-text indigo-text text-darken-4"><strong>Brewery:</strong> <%= beer.brewery %></p>
            <p class="flow-text indigo-text text-darken-4"><strong>Style:</strong> <%= beer.style %></p>
            <p class="flow-text indigo-text text-darken-4"><strong>ABV:</strong> <%= beer.abv %>%</p>
            <p class="flow-text indigo-text text-darken-4"><strong>IBU:</strong> <%= beer.ibu %></p>
          </div>
        </div>
      </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>